{
  "name": "paymentsystemg1",
  "version": "1.0.0",
  "description": "APDS Employee Payment Portal with Enhanced Security",
  "main": "server.mjs",
  "type": "module",
  "scripts": {
    "start": "node server.mjs",
    "dev": "nodemon server.mjs",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --detectOpenHandles",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --coverage --maxWorkers=2",
    "build": "echo 'Build step - add if needed' && exit 0",
    "lint": "eslint . --ext .js,.mjs,.jsx || exit 0",
    "lint:fix": "eslint . --ext .js,.mjs,.jsx --fix || exit 0",
    "format": "prettier --write \"**/*.{js,mjs,jsx,json,md}\" || exit 0",
    "format:check": "prettier --check \"**/*.{js,mjs,jsx,json,md}\" || exit 0",
    "security:audit": "npm audit --audit-level=moderate || exit 0",
    "security:fix": "npm audit fix",
    "prepare": "husky install || true"
  },
  "keywords": ["payment", "security", "devsecops", "nodejs", "express"],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-brute": "^1.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.18.3"
  }
}